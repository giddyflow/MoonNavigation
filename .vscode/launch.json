{
    "version": "0.2.0",
    "configurations": [
        {
            // --- Конфигурация для LINUX ---
            "name": "Debug (gdb) Linux",
            "type": "cppdbg",
            "request": "launch",
            // Исполняемый файл в Linux (без .exe)
            "program": "${workspaceFolder}/build/MoonNavigation",
            // Аргумент - путь к папке с in.json
            "args": ["${workspaceFolder}/MoonNavigation"],
            "stopAtEntry": false,
            // Рабочая директория, откуда запускается программа
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            // --- Конфигурация для WINDOWS ---
            "name": "Debug (gdb) Windows",
            "type": "cppdbg",
            "request": "launch",
            // Исполняемый файл в Windows (с .exe)
            "program": "${workspaceFolder}/build/MoonNavigation.exe",
            // Аргумент - путь к папке с in.json
            "args": ["${workspaceFolder}/MoonNavigation"],
            "stopAtEntry": false,
            // Рабочая директория, откуда запускается программа
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            // Путь к вашему GDB на Windows
            "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}